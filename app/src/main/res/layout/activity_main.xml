<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" A " />

            <EditText
                android:id="@+id/EditA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="EditA"
                android:layout_weight="4"
                android:inputType="numberDecimal|numberSigned" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" B " />

            <EditText
                android:id="@+id/EditB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="EditB"
                android:layout_weight="4"
                android:inputType="numberDecimal|numberSigned" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" C " />

            <EditText
                android:id="@+id/EditC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="EditÐ¡"
                android:layout_weight="4"
                android:inputType="numberDecimal|numberSigned" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sqrb" />

            <TextView
                style="@style/calculations"
                android:id="@+id/QuadrD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/sqrb"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/AC_4" />

            <TextView
                style="@style/calculations"
                android:id="@+id/AC_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/AC_4"
                 />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dicriminant" />

            <TextView
                style="@style/calculations"
                android:id="@+id/Discriminant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/dicriminant"      />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sqtrD" />

            <TextView
                style="@style/calculations"
                android:id="@+id/DiscriminantRoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/sqtrD"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/root1" />

            <TextView
                style="@style/calculations"
                android:id="@+id/Root1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="@string/root1" />

            <TextView
                android:id="@+id/textView9"
                android:textAlignment="textEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/root2" />

            <TextView
                style="@style/calculations"
                android:id="@+id/Root2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/root2"/>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>